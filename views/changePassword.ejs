<%- include ("includes/header") %>

<section>
	<div class="gap gray-bg" >
		<div class="container-fluid" style="padding-top: 20px;">
			<div class="row">
				<div class="col-md-12">
					<div class="row" id="page-contents">

						<div class="col-md-3">
							<%- include ("includes/left-sidebar") %>
							<%- include ("includes/social-link") %>
						</div>

						<div class="col-md-6">

							
                                <div class="reset-form">
                                    <h2 class="log-title">Change password</h2>
        
                                    <form onsubmit="return doChangePassword(this);">
        
                                        <div class="form-group">
                                            <input type="password" required name="oldpassword" />
                                            <label class="control-label">Your password</label><i class="mtrl-select"></i>
                                        </div>
        
                                        <div class="form-group">
                                            <input type="password" required name="newpassword" />
                                            <label class="control-label">New password</label><i class="mtrl-select"></i>
                                        </div>
                                        <div class="form-group">
                                            <input type="password" required name="renewpassword" />
                                            <label class="control-label">Comfirm newpassword</label><i class="mtrl-select"></i>
                                        </div>
        
                                        
                                        <div class="submit-btns">
                                            <button class="mtr-btn login" name="submit" type="submit"><span>Save change</span></button>
                                        </div>
                                    </form>
                                </div>
                           
						</div>

						<div class="col-md-3">
							<%- include ("includes/right-sidebar") %>
							<%- include ("includes/friends-widget") %>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<script>
	function doChangePassword(form) {
        console.log("run");
			form.submit.setAttribute("disabled", "disabled");
			form.submit.innerHTML = "<span>Loading...</span>";

			var ajax = new XMLHttpRequest();
			ajax.open("POST", "/changePassword", true);

			ajax.onreadystatechange = function() {
				if (this.readyState == 4 && this.status == 200) {
					form.submit.removeAttribute("disabled");
					form.submit.innerHTML = "<span>Proccesing</span>";

                    var response = JSON.parse(this.responseText);

					if (response.status == "success") {
						
                        alert(response.message);
                        doLogout();
                        window.location.href = "/login";
						
					} else {
						alert(response.message);
					}
				}
			};

            var formData = new FormData(form);
            formData.append("accessToken", localStorage.getItem("accessToken"));
            ajax.send(formData);

            return false;
        
		}
</script>


